<idea-plugin>

  <!--  Unique id for this plugin. Must stay constant for the life of the plugin.  -->
  <id>com.intellij.sdk.webstorm</id>

  <!-- Text to display as name on Preferences/Settings | Plugin page -->
  <name>SDK: WebStorm Project Sample</name>

  <!-- The version of this plugin -->
  <version>0.1.0</version>

  <!-- Compatible with the following versions of IntelliJ Platform -->
  <idea-version since-build="192.4"/>

  <depends>JavaScript</depends>

  <!-- Text to display as description on Preferences/Settings | Plugin page  -->
  <description>
    <![CDATA[
    Demonstrates how to configure a plugin project for a WebStorm plugin.
    ]]>
  </description>
  <change-notes>
    <![CDATA[
      <b>0.1.0</b> First release for cross-product pages.<br>
    ]]>
  </change-notes>

  <!-- Text to display as company information on Preferences/Settings | Plugin page -->
  <vendor url="https://plugins.jetbrains.com">IntelliJ Platform SDK</vendor>

  <actions>
    <!-- Define a new menu group as a last entry in the main menu    -->
    <group id="com.intellij.sdk.webstorm.GroupedActions" text="SDK: Plugin" popup="true">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <!-- Add a single action to the new group     -->
      <action id="com.intellij.sdk.webstorm.PopupDialogAction" class="com.intellij.sdk.webstorm.PopupDialogAction"
              text="Pop a Dialog" description="SDK WebStorm basics example" icon="SdkIcons.Sdk_default_icon">
      </action>
    </group>
  </actions>
</idea-plugin>